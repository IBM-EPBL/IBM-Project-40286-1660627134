#include <LiquidCrystal.h>
LiquidCrystal lcd(7,6, 5, 4, 3, 2);
#define echoPin 8
#define trigPin 9

long duration;
int distance;

void setup()
{
  pinMode(10,OUTPUT);
  lcd.begin(16, 2); 
 
  pinMode(echoPin,INPUT);
  pinMode(trigPin,OUTPUT);
  pinMode(10,OUTPUT);
  pinMode(11,OUTPUT);
  pinMode(12,OUTPUT);
 
  }

void loop()
{
  digitalWrite(trigPin, 0);
  delayMicroseconds(2);
  digitalWrite(trigPin, 1);
  delayMicroseconds(10);
  digitalWrite(trigPin, 0);
  duration = pulseIn(echoPin, 1);
  distance = duration * 0.034 / 2; 
  int signal=analogRead(A3);
  float voltage=(signal*5.0)/1024;
  float temC=(voltage-0.5)*100;
  lcd.setCursor(0,0);
  lcd.print("Temp:");
  lcd.print(temC);
  lcd.setCursor(0,1);
  lcd.print("dist:");
  lcd.print(distance);
 
  if (temC>100){
  ;
  digitalWrite(10,1);
  }
  else{
  
  digitalWrite(10,0);
  
  }
   if (distance>100){
  
  digitalWrite(10,1);
  }
  else{
 
  digitalWrite(10,0);
 
  }
}
